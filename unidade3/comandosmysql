-criar base de dados: create database aula1tarde;
-como usar/conectar: use aula1tarde;
-apagar base de dados: drop database aula1tarde;
-criar tabela: create table aluno(
nome varchar(50),
idade int,
endereço varchar(50),
estado varchar(2),
sexo enum("f","m"));
